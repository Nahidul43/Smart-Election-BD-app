<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".searching">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Searching"
        android:textSize="25dp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/bottonVerify"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Verify"
        android:textSize="20sp"
        android:background="@drawable/election_info"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:layout_alignParentBottom="true"

        />


    <androidx.cardview.widget.CardView
        android:backgroundTint="#ffffff"

        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:cardCornerRadius="10dp"
       android:layout_above="@id/bottonVerify"

        >
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of birth"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/img_5"
            android:hint="  Enter data of birth"
            android:padding="15dp"
            android:textColorHint="#AD5E35B1"
            android:textColor="#000000"



            />

        <TextView
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NID number"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            />


        <EditText
            android:id="@+id/edNumber"
            android:layout_marginTop="100dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Enter NID number"
            android:drawableStart="@drawable/in"
            android:textColorHint="#AD5E35B1"
            android:inputType="number"
            android:textColor="#000000"
            />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="220dp"
            app:lottie_autoPlay="true"

            app:lottie_rawRes="@raw/vot" />


    </androidx.cardview.widget.CardView>










</RelativeLayout>

